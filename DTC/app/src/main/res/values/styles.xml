<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Normal" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="android:textColor">@color/selected</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Number" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="fontPath">"fonts/din.ttf</item>
    </style>

    <style name="TextAppearance.Number.Left" parent="TextAppearance.Number">
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    
    <style name="widget">
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="widget_bottom">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginTop">-16dp</item>
    </style>

</resources>
